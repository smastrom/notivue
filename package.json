{
   "version": "1.0.0",
   "private": true,
   "packageManager": "pnpm@8.6.3",
   "engines": {
      "node": ">=18.0.0"
   },
   "scripts": {
      "preinstall": "npx only-allow pnpm",
      "dev": "pnpm -C demo run dev",
      "preview": "pnpm -C demo run preview",
      "build": "pnpm -C packages/notivue run build",
      "build:demo": "pnpm -C demo run build",
      "prepare": "husky install",
      "pretty-quick": "pretty-quick",
      "test:gui": "cypress open --component",
      "test:chrome": "cypress run --component --browser chrome",
      "test:firefox": "cypress run --component --browser firefox",
      "test:webkit": "cypress run --component --browser webkit",
      "test": "pnpm test:chrome && pnpm test:firefox && pnpm test:webkit"
   },
   "devDependencies": {
      "@types/node": "^18.16.18",
      "@vitejs/plugin-vue": "^4.2.3",
      "husky": "^8.0.3",
      "prettier": "^2.8.8",
      "pretty-quick": "^3.1.3",
      "rimraf": "^4.4.1",
      "typescript": "^4.9.5",
      "vite": "^4.3.9",
      "vue": "^3.3.4",
      "vue-tsc": "^1.8.1"
   }
}
