{
   "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "moduleResolution": "Node",
      "strict": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "esModuleInterop": true,
      "lib": ["ESNext", "DOM"],
      "skipLibCheck": true,
      "noEmit": true,
      "baseUrl": ".",
      "paths": {
         "@/components/*": ["components/*"],
         "@/lib/*": ["lib/*"],
         "notivue": ["../packages/notivue/index.ts"]
      }
   },
   "include": ["."]
}
