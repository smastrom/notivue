{
   "compilerOptions": {
      "target": "ES2015",
      "module": "ES2020",
      "moduleResolution": "Node",
      "strict": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "esModuleInterop": true,
      "lib": ["ES2015", "DOM"],
      "skipLibCheck": true,
      "noEmit": true,
      "baseUrl": ".",
      "paths": {
         "@/core/*": ["core/*"],
         "@/shared/*": ["shared/*"],
         "@/Notivue/*": ["Notivue/*"],
         "@/NotivueSwipe/*": ["NotivueSwipe/*"],
         "@/NotivueKeyboard/*": ["NotivueKeyboard/*"],
         "@/Notifications/*": ["Notifications/*"],
         "notivue": ["index.ts"]
      }
   },
   "include": ["."]
}
