{
   "name": "notivue",
   "version": "1.4.2",
   "private": false,
   "description": "Fully-featured toast notification system for Vue and Nuxt",
   "keywords": [
      "vue",
      "vuejs",
      "notification",
      "notifications",
      "alert",
      "alerts",
      "toast",
      "toasts",
      "notivue"
   ],
   "homepage": "https://notivue.pages.dev/",
   "bugs": {
      "url": "https://github.com/smastrom/notivue/issues"
   },
   "repository": {
      "type": "git",
      "url": "https://github.com/smastrom/notivue.git",
      "directory": "packages/notivue"
   },
   "license": "MIT",
   "author": {
      "name": "Simone Mastromattei",
      "email": "smastrom@proton.me"
   },
   "sideEffects": false,
   "exports": {
      ".": {
         "types": "./dist/index.d.ts",
         "import": "./dist/index.js"
      },
      "./nuxt": {
         "import": "./nuxt/module.mjs",
         "require": "./nuxt/module.cjs",
         "types": "./nuxt/index.d.ts"
      },
      "./notifications.css": "./dist/Notifications/notifications.css",
      "./animations.css": "./dist/core/animations.css"
   },
   "module": "dist/index.js",
   "types": "dist/index.d.ts",
   "type": "module",
   "files": [
      "dist/*",
      "nuxt/*"
   ],
   "scripts": {
      "prebuild": "cp ../../README.md ../../LICENSE .",
      "build": "rm -rf dist && vue-tsc && vite build && bun run build:css",
      "watch": "rm -rf dist && concurrently \"vite build --watch\" \"bun run build:css --watch\"",
      "build:css": "esbuild ./Notifications/notifications.css ./core/animations.css --bundle --outdir=dist --minify --target=chrome58,edge16,firefox57,node12,safari11",
      "postbuild": " rm -f *.tgz && npm pack && ./scripts/verify-tarball.sh"
   },
   "devDependencies": {
      "@nuxt/kit": "^3.7.1",
      "@nuxt/schema": "^3.0.0",
      "@types/node": "^18.17.15",
      "concurrently": "^8.2.1",
      "defu": "^6.1.2",
      "esbuild": "^0.19.2",
      "typescript": "^5.2.2",
      "vite": "^4.4.9",
      "vue": "^3.3.4",
      "vue-tsc": "^1.8.10",
      "vite-plugin-dts": "^3.6.0"
   },
   "peerDependencies": {
      "@nuxt/kit": ">=3.5.0",
      "@nuxt/schema": ">=3.5.0",
      "defu": ">=6"
   },
   "peerDependenciesMeta": {
      "@nuxt/schema": {
         "optional": true
      },
      "defu": {
         "optional": true
      },
      "@nuxt/kit": {
         "optional": true
      }
   }
}
